  "bugs": {
    "url": "https://github.com/Nufflee/EmbedHerald/issues"
  },
  "homepage": "https://github.com/Nufflee/EmbedHerald#readme",
  "dependencies": {
    "node-html-parser": "^6.1.6"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20231010.0",
    "@types/express": "^4.17.19",
    "express": "^4.18.2",
    "http-proxy": "^1.18.1",
    "localtunnel": "^2.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.4.4",
    "wrangler": "^3.13.1"
  }
}